<h2 class="page-header">Edit book details</h2>
{{#if errors}}
	{{#each errors}}
		<div class="notice error"><i class="icon-remove-sign icon-large"></i>{{msg}}
		<a href="#close" class="icon-remove"></a></div>
	{{/each}}
{{/if}}
<form method="post" action="/books/editbook/{{docs._id}}">
	<div class="form-group">
		<label>Title</label>
		<input type="text" class="form-control" placeholder="Title" name="title" value="{{docs.title}}">
	</div>
	<div class="form-group">
		<label>Author</label>
		<input type="text" class="form-control" placeholder="Author" name="author" value="{{docs.author}}">
	</div>
	<div class="form-group">
		<label>Genre</label>
		<input type="text" class="form-control" placeholder="Genre" name="genre" value="{{docs.genre}}">
	</div>
	<div class="form-group">
		<label>Description</label>
		<input type="text" class="form-control" placeholder="Description" name="description" value="{{docs.description}}">
	</div>
	<div class="form-group">
		<label>Price</label>
		<input type="text" class="form-control" placeholder="Price" name="price" value="{{docs.price}}">
	</div>
	<button type="submit" class="btn btn-default">Upload Details</button>
</form>