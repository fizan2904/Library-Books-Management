<h2 class="page-header">Upload Genre</h2>
{{#if errors}}
	{{#each errors}}
		<div class="notice error"><i class="icon-remove-sign icon-large"></i>{{msg}}
		<a href="#close" class="icon-remove"></a></div>
	{{/each}}
{{/if}}
<form method="post" action="/genres/uploadgenre">
	<div class="form-group">
		<label>Genre</label>
		<input type="text" class="form-control" placeholder="Genre" name="genre">
	</div>
	<button type="submit" class="btn btn-default">Register</button>
</form>